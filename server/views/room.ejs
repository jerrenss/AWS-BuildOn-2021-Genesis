<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Doctoristic Conferencing</title>
  <link rel="icon" href="https://img.icons8.com/fluent/48/000000/medical-doctor.png">
  <link rel="stylesheet" href="style.css" />
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
  <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
  <script>
    const ROOM_ID = "<%= roomId %>";
  </script>
</head>

<body>
  <div class="header">
    <div class="logo">
      <div class="header__back">
        <i class="fas fa-angle-left"></i>
        <h4 class="back__text">Exit</h4>
      </div>
      <h3>Doctoristic Conferencing</h3>
    </div>
  </div>
  <div class="main">
    <div class="main__videos">
      <div class="videos__group">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <i class="fa fa-video-camera"></i>
          </div>
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone"></i>
          </div>
          <div id="showChat" class="options__button">
            <i class="fa fa-comment"></i>
          </div>
        </div>
        <div class="options__right">
          <div id="inviteButton" class="options__button">
            <i class="fas fa-user-plus"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="main__conversation">
      <div class="main__chat_window">
        <div class="messages">

        </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send" class="options__button">
          <i class="fa fa-plus" aria-hidden="true"></i>
        </div>
      </div>
    </div>
    <div class="main__documents">
      <div class="document__container">
        <h4 class="document__header">Consultation Notes</h4>
        <textarea class="document__text" type="textarea" autocomplete="off"></textarea>
      </div>
      <div class="document__container">
        <h4 class="document__header">Prescriptions</h4>
        <textarea class="document__text" type="textarea" autocomplete="off"></textarea>
      </div>
    </div>
  </div>
</body>
<script src="script.js"></script>

</html>